<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginRight="@dimen/ds30"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ds30">

        <EditText
            android:id="@+id/edit_input"
            android:layout_width="0dp"
            android:layout_height="@dimen/ds100"
            android:layout_weight="1"
            android:background="@null"
            android:lines="1"
            android:hint="请输入单词、短语、长句(中英皆可)"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/ds30"
            android:textSize="15sp"
            android:textCursorDrawable="@drawable/drawable_cusor" />

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="@dimen/ds50"
            android:layout_height="@dimen/ds50"
            android:layout_marginRight="@dimen/ds20"
            android:src="@drawable/icon_search" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/ds30"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/ds20">

        <TextView
            android:id="@+id/tv_result_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result_A1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_result_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音标:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result_B1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_result_C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基础释义:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result_C1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_result_D"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络释义:"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_result_D1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>
