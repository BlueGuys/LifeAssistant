<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_bg_a"
    android:orientation="vertical">

    <TextView
        android:visibility="gone"
        android:id="@+id/fragment_shares_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds30"
        android:layout_marginRight="@dimen/ds30"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="@dimen/ds50"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_blue_back"/>

        <EditText
            android:hint="股票代码 例:000001"
            android:id="@+id/edit_input"
            android:layout_width="0dp"
            android:layout_height="@dimen/ds100"
            android:layout_weight="1"
            android:background="@null"
            android:lines="1"
            android:imeOptions="actionSearch"
            android:textSize="16sp"
            android:paddingLeft="@dimen/ds30"
            android:textCursorDrawable="@drawable/drawable_cusor" />

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="@dimen/ds50"
            android:layout_height="@dimen/ds50"
            android:layout_marginRight="@dimen/ds20"
            android:src="@drawable/icon_search" />
    </LinearLayout>

    <ScrollView
        android:scrollbars="none"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/kaipan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/dangqian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <TextView
                android:id="@+id/today_min"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/today_max"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/fenshi_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/day_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/week_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />

        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/month_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>