<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_home_weather_layout"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/royalblue">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/ds30"
            android:paddingTop="@dimen/ds30"
            android:paddingBottom="@dimen/ds30">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_home_weather_temp"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:textColor="@color/home_weather_text"
                    android:textSize="60sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textColor="@color/home_weather_text"
                    android:textSize="34sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/fragment_home_weather_temp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds20"
                android:gravity="center"
                android:text="0℃/7℃"
                android:textColor="@color/home_weather_text"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_home_city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ds30"
                    android:gravity="center"
                    android:text="北京"
                    android:textColor="@color/home_weather_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fragment_home_weather_air_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="优"
                    android:textColor="@color/home_weather_text"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_tianqi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds4"
                android:layout_marginRight="@dimen/ds30"
                android:gravity="center"
                android:textColor="@color/home_weather_text"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/fragment_home_info_tips_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/ds20"
            android:text="手机状态"
            android:paddingHorizontal="@dimen/ds10"
            android:paddingVertical="@dimen/ds6"
            android:textColor="@color/white"
            android:background="@drawable/shape_round_device_info"/>


        <ImageView
            android:id="@+id/fragment_home_weather_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ds140"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/ds60"
            android:src="@drawable/qing" />

        <TextView
            android:id="@+id/fragment_home_weather_tips"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/ds30"
            android:layout_marginBottom="@dimen/ds30"
            android:gravity="center_vertical"
            android:text="tips:"
            android:textColor="@color/home_weather_text"
            android:textSize="11sp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="备忘录"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/fragment_home_memo_add"
                android:layout_width="@dimen/ds50"
                android:layout_height="@dimen/ds50"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_add_things" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/appColorPositive" />

        <ListView
            android:id="@+id/fragment_home_memo_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent" />

    </LinearLayout>


</LinearLayout>
