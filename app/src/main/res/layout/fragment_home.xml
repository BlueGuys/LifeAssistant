<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/fragment_home_weather_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/royalblue">

        <LinearLayout
            android:id="@+id/fragment_home_city_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/city" />

            <TextView
                android:id="@+id/fragment_home_city_name"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="北京"
                android:textColor="@color/home_weather_text"
                android:textSize="18sp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_home_info_tips_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/home_tip"
            />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fragment_home_weather_img_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_home_city_layout"
            android:layout_marginLeft="15dp">

            <ImageView
                android:id="@+id/fragment_home_weather_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/qing" />

        </FrameLayout>


        <TextView
            android:id="@+id/fragment_home_weather_tips"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/fragment_home_weather_img_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="tips:"
            android:textColor="@color/home_weather_text"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/fragment_home_weather_air_level"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/fragment_home_weather_tips"
            android:layout_below="@+id/fragment_home_city_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="优"
            android:textColor="@color/home_weather_text"
            android:textSize="35dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/fragment_home_weather_tips"
            android:layout_below="@+id/fragment_home_city_layout"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/fragment_home_weather_air_level"
            android:layout_toRightOf="@+id/fragment_home_weather_img_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_home_weather_temp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="0℃"
                android:textColor="@color/home_weather_text"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fragment_home_weather_temp12"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="0℃/7℃"
                android:textColor="@color/home_weather_text"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/shape_bottom_line">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="备忘录"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <ImageView
                android:id="@+id/fragment_home_memo_add"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/edit" />

        </RelativeLayout>


        <ListView
            android:id="@+id/fragment_home_memo_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/fragment_home_memo_list"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"/>-->


    </LinearLayout>


</LinearLayout>
