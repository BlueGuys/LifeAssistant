<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计算器"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/ds20"/>

    <TextView
        android:id="@+id/fragment_calc_expression"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:layout_above="@+id/fragment_calc_btnslayout"
        android:layout_marginBottom="25dp"
        android:background="@color/c_bg_a"
        android:paddingLeft="@dimen/ds20"
        android:paddingRight="@dimen/ds20"
        android:text=""
        android:textColor="@color/black"
        android:lines="1"
        android:gravity="right|center_vertical"
        android:textSize="25sp"
        android:layout_margin="@dimen/ds30"/>

    <LinearLayout
        android:id="@+id/fragment_calc_btnslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/ds30"
        android:paddingRight="@dimen/ds30"
        android:paddingBottom="@dimen/ds30">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_calc_id_ac"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="AC"
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />

            <Button
                android:id="@+id/fragment_calc_id_left"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="("
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />

            <Button
                android:id="@+id/fragment_calc_id_right"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text=")"
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />

            <Button
                android:id="@+id/fragment_calc_id_divide"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="÷"
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_calc_id_7"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="7"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_8"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="8"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_9"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="9"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_multiply"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="×"
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_calc_id_4"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="4"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_5"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="5"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_6"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="6"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_minus"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="－"
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_calc_id_1"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="1"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_2"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="2"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_3"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="3"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_plus"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="＋"
                android:textColor="@color/appColorPositive"
                android:textSize="35dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_calc_id_0"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:onClick="onClick"
                android:text="0"
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_dot"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="."
                android:textSize="40dp" />

            <Button
                android:id="@+id/fragment_calc_id_equals"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="＝"
                android:textColor="@color/orange"
                android:textSize="40dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
